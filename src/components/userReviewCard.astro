---
import{ type Review} from '../interfaces/review.ts';

interface Props{
    review: Review
}

const {review} = Astro.props
---

<div class="flex flex-col bg-white my-4 p-4  rounded" itemscope itemtype="https://schema.org/Review">
    <div class="flex justify-start items-start">
        <div class="w-18 mr-1" >
            <img src={review.image.src}  width="48" height="48" alt={review.image.alt} title={review.image.title} >
        </div>
        <div class="flex flex-col items-start">
            <span class="font-bold my-2" itemprop="author" itemscope itemtype="https://schema.org/Person"><span itemprop="name">{review.fullName}</span></span>
            <div class="flex items-center my-2 text-yellow-300" itemprop="reviewRating" itemscope itemtype="https://schema.org/Rating">
                <span itemprop="ratingValue">{review.star}</span>/5
                {Array.from({length:review.star}).map(() => 
                <svg class="w-5 h-5 ml-2 me-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 22 20">
                    <path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"/>
                </svg>
                ) }
                

            </div>
            <p class="my-2" itemprop="reviewBody">{review.comment}</p>
        </div>
        
    </div>
</div>