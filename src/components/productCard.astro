---
import { type Product } from "../interfaces/product";
import { PHONE_HREF_LINK } from "../consts/siteInfo";

interface Props {
  product: Product;
}
const { product } = Astro.props;

const getRandomImage = () => {

}
---

<div
  class="w-full flex flex-col justify-between max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700"
  itemscope
  itemtype="http://schema.org/Food"
>
  <img
    loading="lazy"
    class="rounded-t-lg aspect-auto object-cover max-h-68 h-full"
    itemprop="image"
    src={product.image as string}
    alt={product.title + ' Ürün Fotoğrafı'}
    title={product.title}
  />
  <div class="px-5 pb-5">
    <h3 itemprop="name"
      class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white mt-4"
    >
      {product.title}
    </h3>
    <p itemprop="description"> {product.description}</p>

    <div class="flex items-center justify-between mt-4">
      <span class="text-xl font-bold text-gray-900 dark:text-white" itemprop="price"
        >{product.price} ₺</span
      >
      <a
        rel="nofollow"
        target="_blank"
        href={PHONE_HREF_LINK}
        class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
        >Sipariş ver</a
      >
    </div>
  </div>
</div>
