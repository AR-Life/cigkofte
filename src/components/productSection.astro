---

import { type Product } from "../interfaces/product";
import ProductCard from '../components/productCard.astro';
import products from '../data/products.json';

---

<section id="urunler">
  <div
    class="px-4 mx-auto text-center md:max-w-screen-md xl:max-w-screen-xl lg:px-36"
  >
    <span class="font-semibold text-2xl uppercase py-10">Öne Çıkan Ürünler</span>
    <div
      class="grid h-full lg:grid-cols-3 md:grid-cols-2 gap-3 mx-auto mt-8 text-gray-500"
    >
      {products.map((x) => <ProductCard product={x} />)}
    </div>
  </div>
</section>
