---
import HeaderLink from "./components/HeaderLink.astro";
import { SITE_TITLE, PHONE, PHONE_HREF_LINK, BUSSINES_LINK } from "../consts/siteInfo";
const { pathname } = Astro.url;
---

<header class="sticky top-0">
  <nav
    class="bg-white border-gray-200 border-b px-4 lg:px-6 py-2.5 dark:bg-gray-800"
  >
    <div
      class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl"
    >
      <a href={pathname} class="flex items-center break-words">
        <span
          class="self-center text-md xs:text-xl font-semibold break-words dark:text-white"
          >{SITE_TITLE}</span
        >
      </a>
      <div class="flex items-center lg:order-3">
        <div class="hidden sm:flex items-center">
          <!--

          <a href="#whatsapp" class="mx-4 hover:scale-125 duration-300">
            <img src="/whatsapp.svg" title="Whatsapp" alt="Whatsapp ile iletişim" width="48" height="48">
          </a>
           -->

          <a
            href={PHONE_HREF_LINK}
            class="flex items-center mx-4 hover:scale-125 duration-300"
          >
            <img
              src="/phone.svg"
              title="Telefon Et"
              alt="Telefon ile iletişim"
              class="mr-2"
              width="36"
              height="36"
            />
            {PHONE}
          </a>
          <a
            href={BUSSINES_LINK}
            target="_blank"
            rel="nofollow"
            class="mx-4 flex items-center hover:scale-125 duration-300"
          >
            <img
              src="/map-icon.svg"
              title="Yol Tarifi Al"
              alt="Yol tarifi al"
              width="48"
              height="48"
              class="mr-2"
            />
            Yol Tarifi Al
          </a>
        </div>
        <button
          data-collapse-toggle="mobile-menu-2"
          type="button"
          class="inline-flex items-center xs:p-2 ml-1 text-sm text-gray-500 xs:rounded-lg lg:hidden xs:hover:bg-gray-100 xs:focus:outline-none xs:focus:ring-2 xs:focus:ring-gray-200 dark:text-gray-400 xs:dark:hover:bg-gray-700 xs:dark:focus:ring-gray-600"
          aria-controls="mobile-menu-2"
          aria-expanded="false"
        >
          <span class="sr-only">Open main menu</span>
          <svg
            class="w-6 h-6"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
            ><path
              fill-rule="evenodd"
              d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
              clip-rule="evenodd"></path></svg
          >
          <svg
            class="hidden w-6 h-6"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
            ><path
              fill-rule="evenodd"
              d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
              clip-rule="evenodd"></path></svg
          >
        </button>
      </div>

      <div
        class="hidden justify-between items-center w-full lg:flex lg:w-auto lg:order-1"
        id="mobile-menu-2"
      >
        <ul
          class="flex flex-col mt-4 font-medium lg:flex-row lg:space-x-8 lg:mt-0"
        >
          <li>
            <a
              href="#urunler"
              data-collapse-toggle="mobile-menu-2"
              aria-controls="mobile-menu-2"
              aria-expanded="false"
              role="presentation"
              class="block py-2 pr-4 pl-3 text-gray-700 border-b border-gray-100 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-primary-700 lg:p-0 dark:text-gray-400 lg:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white lg:dark:hover:bg-transparent dark:border-gray-700"
              >Ürünler</a
            >
          </li>
          <li>
            <a
              href="#yorumlar"
              data-collapse-toggle="mobile-menu-2"
              aria-controls="mobile-menu-2"
              aria-expanded="false"
              role="presentation"
              class="block py-2 pr-4 pl-3 text-gray-700 border-b border-gray-100 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-primary-700 lg:p-0 dark:text-gray-400 lg:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white lg:dark:hover:bg-transparent dark:border-gray-700"
              >Yorumlar</a
            >
          </li>
          <li>
            <a
            data-collapse-toggle="mobile-menu-2"
              href="#iletisim"
              role="button"
              aria-controls="mobile-menu-2"
              aria-expanded="false"
              class="block py-2 pr-4 pl-3 text-gray-700 border-b border-gray-100 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-primary-700 lg:p-0 dark:text-gray-400 lg:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white lg:dark:hover:bg-transparent dark:border-gray-700"
              >İletişim</a
            >
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
<main class="py-4 pb-28 ">
  <slot />
</main>
<footer >
  <div
    class="fixed sm:hidden bottom-0 left-0 z-50 w-full h-16 bg-white border-t border-gray-200 dark:bg-gray-700 dark:border-gray-600"
  >
    <div class="grid h-full max-w-lg grid-cols-2 mx-auto font-medium">
      <a
        role="button"
        type="button"
        href={BUSSINES_LINK}
        target="_blank"
        rel="nofollow"
        class="inline-flex flex-col items-center justify-center px-5 hover:bg-gray-50 dark:hover:bg-gray-800 group"
      >
        <img
          src="/map-icon.svg"
          alt="Yol Tarifi Al"
          title="Yol Tarifi Al"
          width="36"
          height="36"
        />
        <span
          class="text-sm text-gray-500 dark:text-gray-400 group-hover:text-blue-600 dark:group-hover:text-blue-500"
          >Yol Tarifi</span
        >
      </a>

      <!--

      <a
        role="button"
        type="button"
        class="inline-flex flex-col items-center justify-center px-5 hover:bg-gray-50 dark:hover:bg-gray-800 group"
      >
        <img
          src="/whatsapp.svg"
          alt="Whatsapp button"
          title="Whatsapp button"
          width="36"
          height="36"
        />
        <span
          class="text-sm text-gray-500 dark:text-gray-400 group-hover:text-blue-600 dark:group-hover:text-blue-500"
          >Whatsapp</span
        >
      </a>
       -->

      <a
        role="button"
        type="button"
        href={PHONE_HREF_LINK}
        class="inline-flex flex-col items-center justify-center px-5 hover:bg-gray-50 dark:hover:bg-gray-800 group"
      >
        <img
          src="/phone.svg"
          alt="Telefon et"
          title="Telefon Et"
          width="28"
          height="28"
        />
        <span
          class="text-sm text-gray-500 dark:text-gray-400 group-hover:text-blue-600 dark:group-hover:text-blue-500"
          >Telefon</span
        >
      </a>
    </div>
  </div>
</footer>
<script
  is:inline
  src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"
></script>
